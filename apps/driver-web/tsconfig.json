{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "@mishwari/api": ["../../packages/api/src"],
      "@mishwari/types": ["../../packages/types/src"],
      "@mishwari/utils": ["../../packages/utils/src"],
      "@mishwari/ui-web": ["../../packages/ui-web/src"],
      "@mishwari/ui-primitives": ["../../packages/ui-primitives/src"],
      "@mishwari/features-auth": ["../../packages/features/auth/src"],
      "@mishwari/features-bookings": ["../../packages/features/bookings/src"],
      "@mishwari/features-passengers": ["../../packages/features/passengers/src"],
      "@mishwari/features-profile": ["../../packages/features/profile/src"],
      "@mishwari/features-trips": ["../../packages/features/trips/src"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
